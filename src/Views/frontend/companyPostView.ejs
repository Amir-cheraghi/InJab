<div class="container">

  <!-- Message -->
  <%- include('./partials/message')  %> 
  <!-- /Message -->
  <div class="row">

    <!-- Post Content Column -->
    <div class="col">
      <div class="card my-4 h-75 shadow">
        <h5 class="card-header text-right rtl"><%- data.title %> </h5>
        <div class="card-body text-right rtl"><textarea class="h-100 w-100 border-0" style="resize: none; outline: none; cursor: default;" readonly><%- data.description %></textarea> </div>
        
          

        <div class="card-footer text-left rtl text-muted h6">

          <div class="d-flex flex-row justify-content-between">
            <button type="button" class="btn  text-secondary  h6" data-container="body" data-trigger="focus" title="حقوق" data-toggle="popover" data-placement="bottom" data-content="<%- data.salary %> ">حقوق</button>
            <button type="button" class="btn  text-secondary  h6" data-container="body" data-trigger="focus" title="آدرس" data-toggle="popover" data-placement="bottom" data-content="<%- data.address %> ">آدرس</button>
            <button type="button" class="btn  text-secondary  h6" data-container="body" data-trigger="focus" title="جنسیت" data-toggle="popover" data-placement="bottom" data-content="<%- data.gender %> ">جنسیت</button>
            <button type="button" class="btn  text-secondary  h6" data-container="body" data-trigger="focus" title="ساعت کاری" data-toggle="popover" data-placement="bottom" data-content="<%- data.time %> ">ساعت کاری</button>
            <button type="button" class="btn  text-secondary  h6" data-container="body" data-trigger="focus" title="مدرک" data-toggle="popover" data-placement="bottom" data-content="<%- data.degree %> ">مدرک</button>
            <button type="button" class="btn  text-secondary  h6" data-container="body" data-trigger="focus" title="مدرک" data-toggle="popover" data-placement="bottom" data-content="<%- data.city %> ">شهر</button>
           
          </div>
          <div class="border-top text-right pt-3 pb-3"  style="font-size: 12px;"> <%- date%></div>

          <div class="text-right">
            <div class="d-flex flex-row justify-content-between">


              <form action="/MyPosts/<%- data.id %>" method="POST" enctype="application/x-www-form-urlencoded" >
                <input type="hidden" name="_method" value="PUT"> <!--PUT METHOD-->
                <button type="submit" class="btn btn-warning h6">ویرایش </button>
              </form>


              <form action="/MyPosts/<%- data.id %>" method="POST" enctype="application/x-www-form-urlencoded"> <!-- This Is Delete Method -->
                <input type="hidden" name="_method" value="DELETE">
                <button type="button" class="btn btn-danger h6"  data-toggle="modal" data-target="#confrim">حذف آگهی </button>

                <!-- Confrim -->
                <div class="modal fade" id="confrim" tabindex="-1" role="dialog" aria-labelledby="confrimtitle" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title text-dark" id="confrimtitle">حذف آگهی </h5>
                        <button type="button"  class="close rtl" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body text-dark text-right">
                        شما در حال حذف آگهی خود هستید ، آیا از حذف آگهی خود مطمئن هستید ؟؟
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
                        <button type="submit" class="btn btn-danger">حذف</button>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- /Confrim -->
              </form>
            </div>
          </div>

        </div>
      </div>
    </div>

    <!-- Sidebar Widgets Column -->
    <div class="col-md-4">
      <!-- Categories Widget -->
      <div class="card my-4 rtl text-right shadow">
        <h5 class="card-header">مهارت های مورد نیاز</h5>
        <div class="card-body">
          <div class="row">

            <div class="col-lg-6">
              <ul class="list-unstyled mb-0">
            <% for( let i = 0; i < data.skills.length; i++ ) { %>
              
              <% if (i===3) { %>
              </ul>
                </div>
                  <div class="col-lg-6">
                    <ul class="list-unstyled mb-0">
              <% } %>
                
                    <li class="mb-1">
                      <a class="text-decoration-none text-body"><%- data.skills[i] %> </a>
                    </li>
  
            <% } %>
          </div>
        </div>
      </div>
      </div>
      <!-- Side Widget -->
      <div class="card my-4 shadow">
        <h5 class="card-header text-right">درباره شرکت</h5>
        <div class="card-body text-right rtl">
          <%- data.company %> 
        </div>
      </div>

      <!-- Wanted -->
      <div class="card my-4 shadow">
        <h5 class="card-header text-right rtl ">افراد متقاضی</h5>
        <div class="card-body text-right rtl"> <%- data.Applicanted.length %> نفر برای این آگهی درخواست است </div>
        <h5 class="card-footer text-right">
        <% if (data.Applicanted.length!=0) { %>
          <form action="/myposts/Applicanted/<%-data.id %>" method="post">
            <input type="text" name="id" id="id" value="<%- data.id %>" hidden>
            <button type="submit" class="btn btn-dark text-light h6">دیدن افراد متقاضی</button>
          </form>
          <% } else { %>
            <form action="" method="post">
              <input type="text" name="id" id="id" value="<%- data.id %>" hidden>
              <button type="submit" class="btn btn-dark text-light h6" disabled>دیدن افراد متقاضی</button>
            </form>
          <% } %>
        </h5>
      </div>
      <!-- /Wanted -->

    </div>

  </div>
  <!-- /.row -->

</div>
</div>