<form action="/MyPosts/<%- data.id %>"  method="POST" enctype="application/x-www-form-urlencoded">
  <input type="hidden" name="_method" value="PATCH">
<div class="container">

  <div class="row">

    <!-- Post Content Column -->
    <div class="col h-100">
      <div class="card my-4 h-75">
        <h5 class="card-header text-right rtl">
          <input type="text" name="title" id="title" class="form-control rtl" value="<%- data.title%>" placeholder="عنوان آگهی">
        </h5>

        <div class="card-body text-right rtl">
          <textarea name="description" class="form-control rtl h-100" placeholder="لطفا توضیحاتی در مورد آگهی خود بنویسید"><%- data.description%></textarea>
        </div>

        <div class="h-50 text-right rtl" id="container">
          <!-- City -->
          <div class="w-50 mr-3">
            <div class="input-group mb-3">

              <div class="input-group-append">
                <label class="input-group-text" for="inputGroupSelect01">استان</label>
              </div>

              <select name="city" class="custom-select rtl" id="citys">
                <option disabled>لطفا شهر خود را انتخاب کنید : </option>

                <% citys.forEach(el=> { %>

                  <% if (el === data.city) { %>
                    <option selected value="<%- el %>"><%- el %>
                  <% } else { %>
                  <option value="<%- el %>"><%- el %> 
                    <% } %>

                </option>
                <% }) %>

              </select>
            </div>
          </div>

          <!-- Category -->
          <div class="w-50 mr-3">
            <div class="input-group mb-3">
              <div class="input-group-append">
                <label class="input-group-text" for="inputGroupSelect01">دسته بندی</label>
              </div>
              <select name="category" class="custom-select rtl" id="category">
                <option selected disabled>لطفا دسته بندی خود را انتخاب کنید : </option>

                <% jobs.forEach(el=> { %>

                  <% if (el == data.category) { %>
                    <option selected value="<%- el %>"><%- el %>
                  <% } else { %>
                  <option value="<%- el %>"><%- el %> 
                    <% } %>


                <% }) %>

              </select>
            </div>
          </div>

          <div class="w-50 mr-3">
            <div class="input-group mb-3">
              <div class="input-group-append">
                <label class="input-group-text" for="inputGroupSelect01">جنسیت</label>
              </div>
              <select name="gender" class="custom-select rtl" id="gender">
                <option selected disabled>لطفا جنسیت مورد نیاز را انتخاب کنید : </option>

                <% gender.forEach(el=> { %>
                
                  <% if (el === data.gender) { %>
                    <option selected value="<%- el %>"><%- el %>
                  <% } else { %>
                  <option value="<%- el %>"><%- el %> 
                    <% } %>


                <% }) %>

              </select>
            </div>
          </div>

          <div class="w-50 mr-3">
            <div class="input-group mb-3">
              <div class="input-group-append">
                <label class="input-group-text" for="inputGroupSelect01">ساعت کاری</label>
              </div>
              <select name="time" class="custom-select rtl" id="time">
                <option selected disabled>لطفا ساعت کاری مورد نیاز را انتخاب کنید : </option>

                <% time.forEach(el=> { %>
                
                  <% if (el === data.time) { %>
                    <option selected value="<%- el %>"><%- el %>
                  <% } else { %>
                  <option value="<%- el %>"><%- el %> 
                    <% } %>


                <% }) %>

              </select>
            </div>
          </div>

          <div class="w-50 mr-3">
            <div class="input-group mb-3">
              <div class="input-group-append">
                <label class="input-group-text" for="inputGroupSelect01">مدرک</label>
              </div>
              <select name="degree" class="custom-select rtl" id="degree">
                <option selected disabled>لطفا مدرک تحصیلی مورد نیاز را انتخاب کنید : </option>

                <% degree.forEach(el=> { %>
                
                  <% if (el === data.degree) { %>
                    <option selected value="<%- el %>"><%- el %>
                  <% } else { %>
                  <option value="<%- el %>"><%- el %> 
                    <% } %>


                <% }) %>

              </select>
            </div>
          </div>

          <div class="w-50 mr-3">
            <div class="input-group mb-3">
              <div class="input-group-append">
                <label class="input-group-text" for="inputGroupSelect01">حقوق</label>
              </div>
              <select name="salary" class="custom-select rtl" id="salary">

                <option value="<%-data.salary%>" id="default" disabled> : حقوق مورد نظر را انتخاب کنید</option>

                <% if (data.salary === 'توافقی') { %>
                  <option selected value="توافقی " id="option-1" >توافقی</option>
                  <option value="enter" id="option-2">وارد کردن حقوق</option>

                  <% } else { %>
                  <option  value="توافقی " id="option-1" >توافقی</option>
                  <option selected value="enter" id="option-2">وارد کردن حقوق</option>

                <% } %>

              </select>
            </div>
          </div>




        </div>


        <h5 class="card-footer text-right rtl">
          <button class="btn btn-dark text-white border-dark" type="submit">ثبت آگهی</button>
        </h5>

      </div>
    </div>

    <!-- Sidebar Widgets Column -->
    <div class="col-md-4">
      <!-- Categories Widget -->
      <div class="card my-4 rtl text-right">
        <h5 class="card-header">مهارت های مورد نیاز</h5>
        <div class="card-body">
          <div class="row">
            <div class="col-lg-6">
              <ul class="list-unstyled mb-0">

                <li class="mb-1">
                  <input type="text" name="skills" id="skill1" value="<%- data.skills[0]%>" class="form-control rtl" placeholder="مهارت اول">
                </li>

                <li class="mb-1">
                  <input type="text" name="skills" id="skill3"  value="<%- data.skills[2]%>"  class="form-control rtl" placeholder="مهارت سوم">
                </li>

                <li class="mb-1">
                  <input type="text" name="skills" id="skill5"  value="<%- data.skills[4]%>"  class="form-control rtl" placeholder="مهارت پنجم">
                </li>

              </ul>

            </div>
            <div class="col-lg-6">
              <ul class="list-unstyled mb-0">

                <li class="mb-1">
                  <input type="text" name="skills" id="skill2"  value="<%- data.skills[1]%>"  class="form-control rtl" placeholder="مهارت دوم">
                </li>

                <li class="mb-1">
                  <input type="text" name="skills" id="skill4"  value="<%- data.skills[3]%>"  class="form-control rtl" placeholder="مهارت چهارم">                  
                </li>

                <li class="mb-1">
                  <input type="text" name="skills" id="skill6"  value="<%- data.skills[5]%>"  class="form-control rtl" placeholder="مهارت ششم">
                </li>

              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Side Widget -->
      <div class="card my-4">
        <h5 class="card-header text-right">درباره شرکت</h5>
        <div class="card-body text-right rtl">
          <textarea name="company" class="form-control rtl h-100"    placeholder="شرکت خود را معرفی کنید"><%- data.company%></textarea>
        </div>
      </div>

      <!-- Wanted -->
      <div class="card my-4">
        <h5 class="card-header text-right rtl">آدرس</h5>
        <div class="card-body text-right rtl">
          <textarea name="address" class="form-control rtl h-100"   placeholder="آدرس شرکت خود را وارد نمایید"><%- data.address%></textarea>
        </div>
      </div>
    </div>
  </div>
  <!-- /.row -->

</div>
</form>
<script src="/js/editpost.js"></script>
